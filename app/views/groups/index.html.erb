<h1>Listing groups</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.number %></td>
    <td><%= link_to t("group.shuffle"), :controller => "shuffle", :group_id => group.id %></td>
    <td><%= link_to t("group.member"), :controller => "members", :group_id => group.id %></td>
    <td><%= link_to t("menu.show"), :action => "show", :id => group.id %></td>
    <td><%= link_to t("menu.edit"), :action => "edit", :id => group.id %></td>
    <td><%= link_to t("menu.destroy"), { :action => "destroy", :id => group.id }, :confirm => "本当に削除してよろしいですか？" %></td>
  </tr>
<% end %>
</table>

